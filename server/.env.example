# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:root@localhost:5432/lux_project

# Server Configuration
# Host to bind the server to (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
HOST=0.0.0.0
# Port number for the server
PORT=8000

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Add your frontend URLs here (no trailing slashes)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Session Configuration
# Session cookie max age in seconds (default: 604800 = 7 days)
SESSION_COOKIE_MAX_AGE=604800
# Set to true in production with HTTPS
SESSION_COOKIE_SECURE=false
# Always keep this true for security
SESSION_COOKIE_HTTPONLY=true
# Cookie SameSite attribute (lax, strict, or none)
SESSION_COOKIE_SAMESITE=lax

# Security
# Secret key for signing sessions and tokens
# IMPORTANT: Change this to a secure random string in production!
# Generate one with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=change-this-to-a-secure-random-string-in-production

# Application
# Enable debug mode (set to false in production)
DEBUG=true